<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
    <display-name>EFS Licensing</display-name>
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>ru.circumflex.orm.TransactionManagementListener</listener-class>
    </listener>
    <listener><!-- this is not guaranteed to happen in this order according to servlet spec -->
        <listener-class>com.magmanics.circumflex.orm.web.DatabaseConfigurationListener</listener-class>
    </listener>
    <listener>
      <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <context-param>
         <param-name>contextConfigLocation</param-name>
         <param-value>/WEB-INF/spring/spring-config.xml</param-value>
    </context-param>
    	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>

    <servlet>
      <servlet-name>LicensingApplication</servlet-name>
      <servlet-class>com.magmanics.vaadin.spring.SpringIntegrationApplicationServlet</servlet-class>
      <init-param>
        <param-name>application</param-name>
        <param-value>com.magmanics.licensing.ui.LicensingApplication</param-value>
      </init-param>
    </servlet>
    <servlet-mapping>
      <servlet-name>LicensingApplication</servlet-name>
      <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>